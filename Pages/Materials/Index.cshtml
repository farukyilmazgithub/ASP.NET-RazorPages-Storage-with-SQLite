@page
@model storage.Pages.Materials.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Materials in storage</h1>

<p>
    <a asp-page="Create">Add Material</a>
</p>

<form>
    <p>
        <select asp-for="MaterialGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
        
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Piece)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Material) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Piece)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
